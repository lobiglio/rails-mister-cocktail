<div class="form-container bg-show">
  <div class="container container-card">
    <%= simple_form_for(@cocktail) do |f| %>
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Create your cocktail", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
